# Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to version control

# Application Configuration
FLASK_ENV=production
LOG_LEVEL=info
APP_PORT=5000

# Azure Video Indexer Configuration
AccountName=your_video_indexer_account
ResourceGroup=your_resource_group
SubscriptionId=your_subscription_id

# Azure Authentication
AZURE_TENANT_ID=your_tenant_id
AZURE_SUBSCRIPTION_ID=your_subscription_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret

# Azure OpenAI Configuration
AZURE_OPENAI_SERVICE=your_openai_service_name
AZURE_OPENAI_API_KEY=your_openai_api_key
AZURE_OPENAI_CHATGPT_DEPLOYMENT=gpt-4o
AZURE_OPENAI_EMBEDDINGS_DEPLOYMENT=text-embedding-ada-002

# Azure AI Search Configuration
AZURE_SEARCH_SERVICE=your_search_service
AZURE_SEARCH_KEY=your_search_key
AZURE_SEARCH_INDEX=your_search_index

# Database Configuration
LANGUAGE_MODEL=openai
PROMPT_CONTENT_DB=azure_search
PROMPT_CONTENT_DB_NAME=vi-production-index

# Rate Limiting Backend (Redis)
REDIS_URL=redis://redis:6379

# Nginx Configuration (if using)
NGINX_PORT=80
NGINX_SSL_PORT=443

# Optional: External Monitoring
# SENTRY_DSN=your_sentry_dsn
# NEW_RELIC_LICENSE_KEY=your_newrelic_key

# Security Settings (recommended)
# SESSION_SECRET_KEY=your_very_long_random_secret_key_here
# CSRF_SECRET_KEY=another_long_random_secret_key

# Performance Tuning
# GUNICORN_WORKERS=4
# GUNICORN_TIMEOUT=30