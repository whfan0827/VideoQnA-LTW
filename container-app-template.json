{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerAppName": {
            "type": "string",
            "defaultValue": "videoqna-ltw",
            "metadata": {
                "description": "Name of the Container App"
            }
        },
        "environmentName": {
            "type": "string",
            "defaultValue": "videoqna-env",
            "metadata": {
                "description": "Name of the Container App Environment"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources"
            }
        },
        "containerImage": {
            "type": "string",
            "defaultValue": "***REMOVED_ACR_URL***/videoqna-ltw:latest",
            "metadata": {
                "description": "Container image to deploy"
            }
        },
        "azureOpenAiApiKey": {
            "type": "securestring",
            "metadata": {
                "description": "Azure OpenAI API Key"
            }
        },
        "azureSearchKey": {
            "type": "securestring",
            "metadata": {
                "description": "Azure Search Key"
            }
        },
        "azureClientSecret": {
            "type": "securestring",
            "metadata": {
                "description": "Azure Client Secret"
            }
        },
        "azureOpenAiService": {
            "type": "string",
            "defaultValue": "***REMOVED_RESOURCE_NAME***",
            "metadata": {
                "description": "Azure OpenAI Service name"
            }
        },
        "azureOpenAiChatGptDeployment": {
            "type": "string",
            "defaultValue": "gpt-4.1-mini",
            "metadata": {
                "description": "Azure OpenAI ChatGPT deployment name"
            }
        },
        "azureOpenAiEmbeddingsDeployment": {
            "type": "string",
            "defaultValue": "text-embedding-ada-002",
            "metadata": {
                "description": "Azure OpenAI Embeddings deployment name"
            }
        }
    },
    "variables": {
        "logAnalyticsWorkspaceName": "[concat(parameters('environmentName'), '-logs')]"
    },
    "resources": [
        {
            "type": "Microsoft.OperationalInsights/workspaces",
            "apiVersion": "2021-06-01",
            "name": "[variables('logAnalyticsWorkspaceName')]",
            "location": "[parameters('location')]",
            "properties": {
                "sku": {
                    "name": "PerGB2018"
                },
                "retentionInDays": 30,
                "workspaceCapping": {
                    "dailyQuotaGb": 1
                }
            }
        },
        {
            "type": "Microsoft.App/managedEnvironments",
            "apiVersion": "2022-10-01",
            "name": "[parameters('environmentName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName'))]"
            ],
            "properties": {
                "appLogsConfiguration": {
                    "destination": "log-analytics",
                    "logAnalyticsConfiguration": {
                        "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName'))).customerId]",
                        "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceName')), '2021-06-01').primarySharedKey]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.App/containerApps",
            "apiVersion": "2022-10-01",
            "name": "[parameters('containerAppName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.App/managedEnvironments', parameters('environmentName'))]"
            ],
            "properties": {
                "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', parameters('environmentName'))]",
                "configuration": {
                    "secrets": [
                        {
                            "name": "azure-openai-api-key",
                            "value": "[parameters('azureOpenAiApiKey')]"
                        },
                        {
                            "name": "azure-search-key",
                            "value": "[parameters('azureSearchKey')]"
                        },
                        {
                            "name": "azure-client-secret",
                            "value": "[parameters('azureClientSecret')]"
                        }
                    ],
                    "ingress": {
                        "external": true,
                        "targetPort": 5000,
                        "transport": "http",
                        "allowInsecure": false,
                        "traffic": [
                            {
                                "weight": 100,
                                "latestRevision": true
                            }
                        ]
                    }
                },
                "template": {
                    "containers": [
                        {
                            "image": "[parameters('containerImage')]",
                            "name": "videoqna-app",
                            "env": [
                                {
                                    "name": "FLASK_ENV",
                                    "value": "production"
                                },
                                {
                                    "name": "PYTHONPATH",
                                    "value": "/app"
                                },
                                {
                                    "name": "DATA_DIR",
                                    "value": "/app/data"
                                },
                                {
                                    "name": "LANGUAGE_MODEL",
                                    "value": "openai"
                                },
                                {
                                    "name": "PROMPT_CONTENT_DB",
                                    "value": "azure_search"
                                },
                                {
                                    "name": "PROMPT_CONTENT_DB_NAME",
                                    "value": "local_vi_azure_search_db"
                                },
                                {
                                    "name": "AZURE_OPENAI_SERVICE",
                                    "value": "[parameters('azureOpenAiService')]"
                                },
                                {
                                    "name": "AZURE_OPENAI_API_KEY",
                                    "secretRef": "azure-openai-api-key"
                                },
                                {
                                    "name": "AZURE_OPENAI_CHATGPT_DEPLOYMENT",
                                    "value": "[parameters('azureOpenAiChatGptDeployment')]"
                                },
                                {
                                    "name": "AZURE_OPENAI_EMBEDDINGS_DEPLOYMENT",
                                    "value": "[parameters('azureOpenAiEmbeddingsDeployment')]"
                                },
                                {
                                    "name": "AZURE_SEARCH_SERVICE",
                                    "value": "***REMOVED_RESOURCE_NAME***"
                                },
                                {
                                    "name": "AZURE_SEARCH_KEY",
                                    "secretRef": "azure-search-key"
                                },
                                {
                                    "name": "AZURE_SEARCH_INDEX",
                                    "value": "vi-db-name-index"
                                },
                                {
                                    "name": "AccountName",
                                    "value": "vincentvideoindexerai01"
                                },
                                {
                                    "name": "ResourceGroup",
                                    "value": "***REMOVED_RESOURCE_GROUP***"
                                },
                                {
                                    "name": "SubscriptionId",
                                    "value": "***REMOVED_SUBSCRIPTION_ID***"
                                },
                                {
                                    "name": "AZURE_TENANT_ID",
                                    "value": "***REMOVED_TENANT_ID***"
                                },
                                {
                                    "name": "AZURE_SUBSCRIPTION_ID",
                                    "value": "***REMOVED_SUBSCRIPTION_ID***"
                                },
                                {
                                    "name": "AZURE_CLIENT_ID",
                                    "value": "***REMOVED_CLIENT_ID***"
                                },
                                {
                                    "name": "AZURE_CLIENT_SECRET",
                                    "secretRef": "azure-client-secret"
                                }
                            ],
                            "resources": {
                                "cpu": 2.0,
                                "memory": "4.0Gi"
                            }
                        }
                    ],
                    "scale": {
                        "minReplicas": 1,
                        "maxReplicas": 3,
                        "rules": [
                            {
                                "name": "http-scaling",
                                "http": {
                                    "metadata": {
                                        "concurrentRequests": "10"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        }
    ],
    "outputs": {
        "containerAppFQDN": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.App/containerApps', parameters('containerAppName'))).configuration.ingress.fqdn]"
        }
    }
}